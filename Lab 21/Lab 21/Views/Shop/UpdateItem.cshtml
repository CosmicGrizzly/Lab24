
@{
    ViewBag.Title = "UpdateItem";
}

<h2>UpdateItem</h2>


@model Lab24.Models.Item

<form action="../Shop/SaveChanges" method="post"></form>
<input type="hidden" name="id" value="@Model.ID" />
<input type="text" name="Name" value="@Model.name" />
<input type="text" name="Description" value="@Model.Description" />
<input type="text" name="Quantity" value="@Model.Quantity" placeholder="@Model.Quantity" />
<input type="text" name="Price" value="@Model.Price"/>
<input type="submit" class="btn-success" />